{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es2015",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "paths": {
            "rlayers": [ "../src" ],
            "rlayers/*": [ "../src/*" ]
        }
    },
    "include": [
        "."
    ],
    "references": [
        { "path": ".." }
    ]
}