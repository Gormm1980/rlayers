{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es2015",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "paths": {
            "rlayers": ["../src"],
            "rlayers-ssr": ["../ssr"],
            "rlayers/*": ["../src/*"]
        }
    },
    "include": [
        ".",
        "../src"
    ],
    "exclude": ["*.js"]
}